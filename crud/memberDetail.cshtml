<div class="view">
    <div class="container">
        <header>
            <h3><span class="glyphicon glyphicon-edit" id="editMember"></span>{{title}} {{memberDetail.firstName}} {{memberDetail.lastName}}</h3>
        </header>
        <form id="memberDetailForm" name="memberDetailForm" novalidate>
            <div class="editable_fields">        
                <div class="form-group">
                    <label>First Name:</label>
                    <input type="text" name="firstName" class="form-control" ng-model="memberDetail.firstName" required />
                </div>
                <div class="form-group">
                    <label>Last Name:</label>
                    <input type="text" name="lastName" class="form-control" ng-model="memberDetail.lastName" required />
                </div>
                <div class="form-group">
                    <label>Gender:</label>
                    <div class="radio">
                        <label class="radio">
                            <input type="radio" name="gender" value="Male"                                    
                                    ng-model="memberDetail.gender" />
                            Male
                        </label>
                    </div>
                    <div class="radio">                       
                        <label class="radio">
                            <input type="radio" name="gender" value="Female"
                                    ng-model="memberDetail.gender" />
                            Female
                            <br />
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" name="email" class="form-control" ng-model="memberDetail.email" required />
                </div>
                <div class="form-group">
                    <label>Address:</label>
                    <input type="text" name="address" class="form-control" ng-model="memberDetail.address" required />
                </div>
                <div class="form-group">
                    <label>City:</label>
                    <input type="text" name="city" class="form-control" ng-model="memberDetail.city" required />
                </div>
                <div class="form-group">
                    <label>State:</label>
                    <select name="state" required class="form-control"
                            ng-model="memberDetail.stateId"
                            ng-options="state.id as state.name for state in states">
                        <option value=""></option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Zipcode:</label>
                    <input type="text" name="zip" class="form-control" ng-model="memberDetail.zip" required />
                </div>         
            </div>

            <div class="savechanges_bar">        
                <button type="submit" class="btn btn-primary" ng-disabled="memberDetailForm.$invalid || !memberDetailForm.$dirty" ng-click="updateMember(memberDetail)">{{buttonText}}</button>
                <button type="button" class="btn btn-primary" ng-click="showMembers()">Cancel</button>
            </div>
        </form>
    </div>
</div>


